{
  "name": "vscode-dit",
  "displayName": "Dit",
  "version": "0.0.2",
  "publisher": "DitaBase",
  "description": "Language Support, Highlighting, Linting for dit files.",
  "author": {
    "name": "DitaBase",
    "email": "isaiah@ditabase.io",
    "url": "https://www.ditabase.io/"
  },
  "bugs": {
    "url": "https://github.com/ditabase/vscode-dit/issues",
    "email": "isaiah@ditabase.io"
  },
  "homepage": "https://www.ditabase.io/",
  "license": "MIT",
  "icon": "images/128-dit-logo.png",
  "categories": ["Programming Languages", "Linters", "Formatters"],
  "galleryBanner": {
    "color": "#282c34",
    "theme": "dark"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ditabase/vscode-dit.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 88,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2,
          "parser": "json"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/class-name-casing": "warn",
      "@typescript-eslint/semi": "warn",
      "curly": "warn",
      "eqeqeq": "warn",
      "no-throw-literal": "warn",
      "semi": "warn"
    }
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.dit",
    "onLanguage:dit",
    "onCommand:vscode-dit.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dit",
        "extensions": [".dit"],
        "aliases": ["Dit", "ditlang"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dit",
        "scopeName": "source.dit",
        "path": "./syntaxes/dit.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "dit",
        "id": "dit",
        "uiTheme": "vs-dark",
        "path": "./themes/dit-theme.json"
      }
    ],
    "commands": [
      {
        "command": "vscode-dit.helloWorld",
        "title": "Hello World"
      }
    ]
  }
}
